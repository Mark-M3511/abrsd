{#
/**
 * @file
 * Default theme implementation for a media layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--twocol',
    'container',
    'py-3',
  ]
%}
{% if content %}
    <div{{attributes.addClass(classes)}}>
        <div class="row">
            <!-- If at the top of the page re-enable breadcrumbs -->
            {# <div class="col-md-12">
                {{ drupal_breadcrumb() }}
            </div> #}
            {% if content.top %}
                <div {{ region_attributes.top.addClass('region--top') }}>
                    {{ content.top }}
                </div>
            {% endif %}

            <div{{region_attributes.first.addClass('col-md-6')}}>
                {{ content.first }}
            </div>

            <div{{region_attributes.second.addClass('col-md-6')}}>
                {{ content.second }}
            </div>

            {% if content.bottom %}
                <div {{ region_attributes.bottom.addClass('region--bottom') }}>
                    {{ content.bottom }}
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
