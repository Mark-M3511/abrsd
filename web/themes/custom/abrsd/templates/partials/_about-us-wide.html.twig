{#
/**
 * @file
 * Theme partial to display the wide format news card content
 *
 * @see calling templates for available variables and hooks
 *
 */
#}
{# Set up variables #}
{% set title = fields.field_page_title.content|striptags|trim %}
{% set title = title ? title : fields.title.content|striptags|trim %}

{# Remove image at smallest breakpoint: col #}
<div class="col col-image">
	{{ fields.field_hero_image.content }}
</div>
<div class="col-lg-6 col-text">
	<div class="card-body d-flex flex-column justify-content-center p-5">
		<h4 class="card-title mb-4">{{ title }}</h4>
		<div class="card-text mb-4">{{ fields.body.content }}</div>
		{{ include('@abrsd/components/_cta_button.html.twig', {
          'text': link_text,
          'url': link_url,
          'target': target,
          'extra_classes': 'mt-auto align-self-start'
        }) }}
	</div>
</div>
