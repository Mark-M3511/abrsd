{#
/**
 * @file
 * Theme partial to display a floating banner.
 *
 * @see calling templates for available variables and hooks
 *
 */
 #}

{# Set up variables #}
{% set url_title = url_title ? url_title : 'Read More' %}

<div class="floating-banner card position-absolute top-50 start-50 translate-middle p-3">
	<div class="card-body d-flex flex-column justify-content-center">
		<h4>{{ title }}</h4>
		<div class="card-text my-3">
			{{ body }}
		</div>
		<a href="{{ url_link }}" class="btn btn-primary mt-auto align-self-start">{{ url_title|t|upper }}</a>
	</div>
</div>
