{#
/**
 * @file
 * Theme partial to display the wide format news card content
 *
 * @see calling templates for available variables and hooks
 *
 */
#}

<a href="{{ link_url }}" target="{{ target }}">
	<div class="row g-0">
		<div class="col-sm-12 col-md-6">
			<img src="{{ fields.field_hero_image.content|striptags|trim|raw }}" class="img-fluid rounded-start" alt="...">
		</div>
		<div class="col-sm-12 col-md-6">
			<div class="card-body">
				<h4 class="card-title h6 fw-bold">{{ fields.field_page_title.content }}</h4>
				<p class="card-text">{{ fields.body.content }}</p>
			</div>
		</div>
	</div>
</a>
